<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:cardCornerRadius="15dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivFotoPerfilRanking"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/user"
                android:layout_marginLeft="7dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvNumeroRanking"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvNumeroRanking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#4"
                android:textColor="@color/verde_fondo"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvNombreUsrRanking"
                android:layout_width="160dp"
                android:layout_height="25dp"
                android:text="Usuario2"
                android:textColor="@color/verde_fondo"
                android:textSize="18dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                app:layout_constraintStart_toEndOf="@+id/ivFotoPerfilRanking"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvUsernameUsrRanking"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Usuario2"
                android:textColor="@color/verde_fondo"
                android:layout_marginLeft="5dp"
                android:textSize="16dp"
                app:layout_constraintStart_toEndOf="@+id/ivFotoPerfilRanking"
                app:layout_constraintTop_toBottomOf="@+id/tvNombreUsrRanking" />

            <TextView
                android:id="@+id/tvPuntosUserRanking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4000pts"
                android:textColor="@color/verde_fondo"
                android:textSize="18dp"
                android:layout_marginRight="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>


